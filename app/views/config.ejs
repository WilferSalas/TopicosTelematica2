      <div class="card text-center mt-5">
        <div class="card-body">
          <h6>Email</h6>
          <label for="email" class="form-control"><%= user.displayName%></label>
          <h6>Nombre</h6>
          <label  for="name"class="form-control"><%= user.nickname %></label>
        </div>
      </div>
</form>

